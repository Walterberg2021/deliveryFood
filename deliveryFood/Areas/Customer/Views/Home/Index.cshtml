@model IEnumerable<Pizza.Models.Product>

<div class="row pb-3">
    @foreach(var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row pt-2">
                    <div class="col-12 p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card">
                        <img src="@product.imgurl" class="card-img-top rounded"/>
                       
                        <div class="card-body">
                        <div class="pl-1">
                            <p class="card-title h5 text-primary">@product.Name</p>
                        </div>
                            <div class="pl-1">
                                <p>Price: <b>@product.Prise.ToString("0.00")</b></p>
                            </div>
                        </div>
                            <div>
                                <a asp-action="Details" class="btn btn-primary from-control" asp-route-productId="@product.Id" style="width: 100%">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
